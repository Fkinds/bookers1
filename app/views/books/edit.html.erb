<h3>Editing Book</h3>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_area :title %>

  <h4>Body</h4>
  <%= f.text_area :body %></br>

  <%= f.submit 'Update Book' %></br>
  <%= link_to 'show', book_path(@book.id) %> |
  <%= link_to 'back', books_path %>
<% end %>